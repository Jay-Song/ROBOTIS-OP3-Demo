<?xml version="1.0"?>
<launch>
  <arg name="face_cascade_name_0" default="$(find-pkg-share face_detection)/include/face_detection/HaarCascades/haarcascade_frontalface_alt.xml" />
  <arg name="face_cascade_name_1" default="$(find-pkg-share face_detection)/include/face_detection/HaarCascades/haarcascade_frontalface_alt2.xml" />
  <arg name="face_cascade_name_2" default="$(find-pkg-share face_detection)/include/face_detection/HaarCascades/haarcascade_frontalface_alt_tree.xml" />
  <arg name="face_cascade_name_3" default="$(find-pkg-share face_detection)/include/face_detection/HaarCascades/haarcascade_frontalface_default.xml" />
  <arg name="face_cascade_name_4" default="$(find-pkg-share face_detection)/include/face_detection/lbpCascades/lbpcascade_frontalface.xml" />

  <node pkg="face_detection" exec="face_tracking" name="face_tracking" output="screen">
    <param name="face_cascade_name_0" value="$(arg face_cascade_name_0)" />
    <param name="face_cascade_name_1" value="$(arg face_cascade_name_1)" />
    <param name="face_cascade_name_2" value="$(arg face_cascade_name_2)" />
    <param name="face_cascade_name_3" value="$(arg face_cascade_name_3)" />
    <param name="face_cascade_name_4" value="$(arg face_cascade_name_4)" />
    <param name="imageInput" type="string" value="/usb_cam_node/image_raw" />
    <param name="displayed_Image" type="integer" value="0" />
    <param name="publish" type="integer" value="3" />
    <param name="start_condition" type="boolean" value="false" />
  </node>
</launch>
